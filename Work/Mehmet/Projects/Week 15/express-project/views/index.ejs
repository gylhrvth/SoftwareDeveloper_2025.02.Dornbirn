<%- include('partials/header') %>

<h2>Liste der Städte</h2>
<ul>
  <% cities.forEach(city => { %>
    <li><%= city.name %> – <%= city.population %> Einwohner</li>
  <% }) %>
</ul>

<h2>Neue Stadt hinzufügen</h2>
<form action="/add-city" method="POST">
  <label for="name">Stadtname:</label>
  <input type="text" name="name" required>

  <label for="population">Einwohner:</label>
  <input type="number" name="population" required>

  <button type="submit">Hinzufügen</button>
</form>

<%- include('partials/footer') %>