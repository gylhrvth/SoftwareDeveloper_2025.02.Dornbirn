<!DOCTYPE html>
<html>
<head>
  <title>Aufgabenliste</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <%- include('partials/nav') %>
  <h1>Alle Aufgaben</h1>
  <table>
    <tr>
      <th>Titel</th>
      <th>Beschreibung</th>
      <th>Status</th>
      <th>Priorität</th>
      <th>Aktionen</th>
    </tr>
    <% tasks.forEach(task => { %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.status %></td>
        <td><%= task.priority %></td>
        <td>
       <a href="/tasks/edit/<%= task.id %>" class="action-btn">Bearbeiten</a>
<form action="/tasks/delete/<%= task.id %>" method="POST" style="display:inline;">
  <button type="submit" class="action-btn">Löschen</button>
</form>
        </td>
      </tr>
    <% }) %>
  </table>
</body>
</html>