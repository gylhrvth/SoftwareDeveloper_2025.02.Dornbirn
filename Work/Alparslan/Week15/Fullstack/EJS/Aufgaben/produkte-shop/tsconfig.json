{
  "compilerOptions": {
    "target": "ES2020",                                 
    "module": "commonjs",
    "rootDir": "./backend",
    "outDir": "./dist",                                
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                     
    "skipLibCheck": true                                 
  },
  "include": [
    "./backend/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
