<%- include('partials/header') -%>

<section class="upperContent">
  <h2>Profile</h2>
</section>

<section style="margin-top:2em;">
  <h3>Welcome, <%= user.name || user.nickname %></h3>
  <% if (user.picture) { %>
    <img src="<%= user.picture %>" width="120" style="border-radius:50%;margin:1em 0;">
  <% } %>
  <div style="margin:1em 0;">
    <strong>User Info:</strong>
    <pre class="block bg-gray-300 p-4 text-sm overflow-scroll" style="background:var(--todoCompleted);color:var(--text-main);border-radius:var(--radius);padding:1em;"><%= userProfile %></pre>
  </div>
  <a href="/tasks" class="nav-link">Back to Tasks</a>
</section>

<%- include('partials/footer') -%>